{
  "compilerOptions": {
    // --- CONFIGURACIÓN BÁSICA DE NODE ---
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "target": "es2020",

    // --- ¡CRUCIAL PARA TYPEORM! ---
    // Estas dos líneas permiten que los decoradores @Entity, @Column, etc. funcionen
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // ------------------------------

    // Configuración de salida (opcional, pero recomendada)
    "outDir": "./dist",

    // Opciones de Chequeo de Tipos
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    
    // Relajamos un poco estas reglas para evitar errores molestos en desarrollo
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}